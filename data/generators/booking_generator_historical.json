{
    "name": "booking_generator_historical",
    "topic": "bookings",
    "connection": "confluent",
    "localConfigs": {
        "maxEvents": 400,
        "avroSchemaHint": {
            "value": {
                "_gen": "loadJsonFile",
                "file": "/home/data/schemas/booking_schema.avsc"
            }
        }
    },
    "varsOnce": {
        "currentTimeInMs": {
            "_gen": "now"
        },
        "baseTimeInMs": {
            "_gen": "math",
            "expr": "currentTimeInMs - 5184000000"
        }
    },
    "vars": {
        "eventIndex": {
            "_gen": "sequentialInteger",
            "startingFrom": 0
        },
        "eventIntervalMs": {
            "_gen": "uniformDistribution",
            "bounds": [
                10800000,
                14400000
            ],
            "decimals": 0
        },
        "booking_created_at": {
            "_gen": "math",
            "expr": "baseTimeInMs + (eventIndex * eventIntervalMs)",
            "decimals": 0
        },
        "days_until_checkin": {
            "_gen": "uniformDistribution",
            "bounds": [
                172800000,
                1814400000
            ],
            "decimals": 0
        },
        "check_in_time": {
            "_gen": "math",
            "expr": "booking_created_at + days_until_checkin",
            "decimals": 0
        },
        "stay_duration": {
            "_gen": "uniformDistribution",
            "bounds": [
                172800000,
                432000000
            ],
            "decimals": 0
        }
    },
    "value": {
        "booking_id": {
            "_gen": "sequentialString",
            "startingFrom": 600000100,
            "expr": "B~d"
        },
        "customer_email": {
            "_gen": "lookup",
            "name": "customer_generator_historical",
            "path": [
                "row",
                "email"
            ],
            "histogram": {
                "_gen": "histogram",
                "bins": [
                    {
                        "bin": 0.8,
                        "frequency": 2
                    }
                ]
            }
        },
        "hotel_id": {
            "_gen": "lookup",
            "name": "hotel_generator_historical",
            "path": [
                "row",
                "hotel_id"
            ]
        },
        "check_in": {
            "_gen": "var",
            "var": "check_in_time"
        },
        "check_out": {
            "_gen": "math",
            "expr": "check_in_time + stay_duration",
            "decimals": 0
        },
        "occupants": {
            "_gen": "normalDistribution",
            "mean": 3,
            "sd": 1,
            "decimals": 0,
            "clamp": [
                1,
                6
            ]
        },
        "price": {
            "_gen": "normalDistribution",
            "mean": 200,
            "sd": 25,
            "decimals": 0,
            "clamp": [
                125,
                400
            ]
        },
        "created_at": {
            "_gen": "var",
            "var": "booking_created_at"
        }
    }
}
