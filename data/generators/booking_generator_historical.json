{
    "name": "booking_generator_historical",
    "topic": "bookings",
    "connection": "confluent",
    "localConfigs": {
        "maxEvents": 400,
        "avroSchemaHint": {
            "_gen": "loadJsonFile",
            "file": "/home/data/schemas/booking_schema.avsc"
        }
    },
    "varsOnce": {
        "currentTimeInMs": {
            "_gen": "now"
        }
    },
    "vars": {
        "check_in_time": {
            "_gen": "uniformDistribution",
            "bounds": [
                {
                    "_gen": "math",
                    "expr": "currentTimeInMs - 4438400000"
                },
                {
                    "_gen": "math",
                    "expr": "currentTimeInMs - 500000000"
                }
            ],
            "decimals": 0
        },
        "stay_duration": {
            "_gen": "uniformDistribution",
            "bounds": [
                172800000,
                432000000
            ],
            "decimals": 0
        }
    },
    "value": {
        "booking_id": {
            "_gen": "sequentialString",
            "startingFrom": 600000100,
            "expr": "B~d"
        },
        "customer_email": {
            "_gen": "lookup",
            "connection": "postgres",
            "table": "cdc.customer",
            "path": [
                "row",
                "email"
            ],
            "histogram": {
                "_gen": "histogram",
                "bins": [
                    {
                        "bin": 0.8,
                        "frequency": 2
                    }
                ]
            }
        },
        "hotel_id": {
            "_gen": "lookup",
            "connection": "postgres",
            "table": "cdc.hotel",
            "path": [
                "row",
                "hotel_id"
            ]
        },
        "check_in": {
            "_gen": "var",
            "var": "check_in_time"
        },
        "check_out": {
            "_gen": "math",
            "expr": "check_in_time + stay_duration",
            "decimals": 0
        },
        "occupants": {
            "_gen": "normalDistribution",
            "mean": 3,
            "sd": 1,
            "decimals": 0,
            "clamp": [
                1,
                6
            ]
        },
        "price": {
            "_gen": "normalDistribution",
            "mean": 200,
            "sd": 25,
            "decimals": 0,
            "clamp": [
                125,
                400
            ]
        },
        "created_at": {
            "_gen": "uniformDistribution",
            "bounds": [
                {
                    "_gen": "math",
                    "expr": "check_in_time - 1814400000"
                },
                {
                    "_gen": "math",
                    "expr": "check_in_time - 172800000"
                }
            ],
            "decimals": 0
        }
    }
}
