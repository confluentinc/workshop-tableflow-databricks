{
    "name": "clickstream_generator_historical",
    "topic": "clickstream",
    "connection": "confluent",
    "localConfigs": {
        "maxEvents": 3000,
        "avroSchemaHint": {
            "value": {
                "type": "record",
                "name": "ClickstreamEvent",
                "fields": [
                    {
                        "name": "activity_id",
                        "type": "string"
                    },
                    {
                        "name": "customer_email",
                        "type": "string"
                    },
                    {
                        "name": "hotel_id",
                        "type": "string"
                    },
                    {
                        "name": "action",
                        "type": "string"
                    },
                    {
                        "name": "event_duration",
                        "type": "int"
                    },
                    {
                        "name": "url",
                        "type": "string"
                    },
                    {
                        "name": "created_at",
                        "type": "long"
                    }
                ]
            }
        }
    },
    "varsOnce": {
        "currentTimeInMs": {
            "_gen": "now"
        }
    },
    "vars": {
        "hotel_id": {
            "_gen": "lookup",
            "connection": "postgres",
            "table": "cdc.hotel",
            "path": [
                "row",
                "hotel_id"
            ]
        },
        "room_id": {
            "_gen": "uniformDistribution",
            "decimals": 0,
            "bounds": [
                1,
                500
            ]
        }
    },
    "value": {
        "activity_id": {
            "_gen": "sequentialString",
            "startingFrom": 300000100,
            "expr": "A~d"
        },
        "customer_email": {
            "_gen": "lookup",
            "connection": "postgres",
            "table": "cdc.customer",
            "path": [
                "row",
                "email"
            ],
            "histogram": {
                "_gen": "histogram",
                "bins": [
                    {
                        "bin": 0.8,
                        "frequency": 1
                    },
                    {
                        "bin": 0.2,
                        "frequency": 0
                    }
                ]
            }
        },
        "hotel_id": {
            "_gen": "var",
            "var": "hotel_id"
        },
        "action": {
            "_gen": "weightedOneOf",
            "choices": [
                {
                    "weight": 5,
                    "value": "page-view"
                },
                {
                    "weight": 3,
                    "value": "page-click"
                },
                {
                    "weight": 2,
                    "value": "booking-click"
                }
            ]
        },
        "event_duration": {
            "_gen": "normalDistribution",
            "mean": 180,
            "sd": 30,
            "decimals": 0,
            "clamp": [
                53,
                592
            ]
        },
        "url": {
            "_gen": "oneOf",
            "choices": [
                {
                    "_gen": "string",
                    "expr": "/hotels/#{hotel_id}"
                },
                {
                    "_gen": "string",
                    "expr": "/hotels/#{hotel_id}/rooms/#{room_id}"
                }
            ]
        },
        "created_at": {
            "_gen": "uniformDistribution",
            "bounds": [
                {
                    "_gen": "math",
                    "expr": "currentTimeInMs - 4838400000"
                },
                {
                    "_gen": "now"
                }
            ],
            "decimals": 0
        }
    }
}
