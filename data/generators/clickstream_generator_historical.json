{
    "name": "clickstream_generator_historical",
    "topic": "clickstream",
    "connection": "confluent",
    "localConfigs": {
        "maxEvents": 3000,
        "avroSchemaHint": {
            "value": {
                "_gen": "loadJsonFile",
                "file": "/home/data/schemas/clickstream_schema.avsc"
            }
        }
    },
    "varsOnce": {
        "currentTimeInMs": {
            "_gen": "now"
        },
        "baseTimeInMs": {
            "_gen": "math",
            "expr": "currentTimeInMs - 5184000000"
        }
    },
    "vars": {
        "eventIndex": {
            "_gen": "sequentialInteger",
            "startingFrom": 0
        },
        "eventIntervalMs": {
            "_gen": "uniformDistribution",
            "bounds": [
                1500000,
                2100000
            ],
            "decimals": 0
        },
        "clickstream_created_at": {
            "_gen": "math",
            "expr": "baseTimeInMs + (eventIndex * eventIntervalMs)",
            "decimals": 0
        },
        "hotel_id": {
            "_gen": "lookup",
            "name": "hotel_generator_historical",
            "path": [
                "row",
                "hotel_id"
            ]
        },
        "room_id": {
            "_gen": "uniformDistribution",
            "decimals": 0,
            "bounds": [
                1,
                500
            ]
        }
    },
    "value": {
        "activity_id": {
            "_gen": "sequentialString",
            "startingFrom": 300000100,
            "expr": "A~d"
        },
        "customer_email": {
            "_gen": "lookup",
            "name": "customer_generator_historical",
            "path": [
                "row",
                "email"
            ],
            "histogram": {
                "_gen": "histogram",
                "bins": [
                    {
                        "bin": 0.8,
                        "frequency": 1
                    },
                    {
                        "bin": 0.2,
                        "frequency": 0
                    }
                ]
            }
        },
        "hotel_id": {
            "_gen": "var",
            "var": "hotel_id"
        },
        "action": {
            "_gen": "weightedOneOf",
            "choices": [
                {
                    "weight": 5,
                    "value": "page-view"
                },
                {
                    "weight": 3,
                    "value": "page-click"
                },
                {
                    "weight": 2,
                    "value": "booking-click"
                }
            ]
        },
        "event_duration": {
            "_gen": "normalDistribution",
            "mean": 180,
            "sd": 30,
            "decimals": 0,
            "clamp": [
                53,
                592
            ]
        },
        "url": {
            "_gen": "oneOf",
            "choices": [
                {
                    "_gen": "string",
                    "expr": "/hotels/#{hotel_id}"
                },
                {
                    "_gen": "string",
                    "expr": "/hotels/#{hotel_id}/rooms/#{room_id}"
                }
            ]
        },
        "created_at": {
            "_gen": "var",
            "var": "clickstream_created_at"
        }
    }
}
