{
    "name": "review_generator_historical",
    "topic": "hotel_reviews",
    "connection": "confluent",
    "localConfigs": {
        "maxEvents": 200,
        "avroSchemaHint": {
            "value": {
                "_gen": "loadJsonFile",
                "file": "/home/data/schemas/review_schema.avsc"
            }
        }
    },
    "varsOnce": {
        "currentTimeInMs": {
            "_gen": "now"
        },
        "baseTimeInMs": {
            "_gen": "math",
            "expr": "currentTimeInMs - 5184000000"
        },
        "oneStarTexts": {
            "_gen": "loadJsonFile",
            "file": "/home/data/generators/content/review_text_choices_1_star.json"
        },
        "twoStarTexts": {
            "_gen": "loadJsonFile",
            "file": "/home/data/generators/content/review_text_choices_2_star.json"
        },
        "threeStarTexts": {
            "_gen": "loadJsonFile",
            "file": "/home/data/generators/content/review_text_choices_3_star.json"
        },
        "fourStarTexts": {
            "_gen": "loadJsonFile",
            "file": "/home/data/generators/content/review_text_choices_4_star.json"
        },
        "fiveStarTexts": {
            "_gen": "loadJsonFile",
            "file": "/home/data/generators/content/review_text_choices_5_star.json"
        }
    },
    "vars": {
        "eventIndex": {
            "_gen": "sequentialInteger",
            "startingFrom": 0
        },
        "eventIntervalMs": {
            "_gen": "uniformDistribution",
            "bounds": [
                21600000,
                28800000
            ],
            "decimals": 0
        },
        "review_created_at": {
            "_gen": "math",
            "expr": "baseTimeInMs + (eventIndex * eventIntervalMs)",
            "decimals": 0
        }
    },
    "value": {
        "review_id": {
            "_gen": "sequentialString",
            "startingFrom": 510000100,
            "expr": "R~d"
        },
        "booking_id": {
            "_gen": "lookup",
            "name": "booking_generator_historical",
            "path": [
                "value",
                "booking_id"
            ]
        },
        "review_rating": {
            "_gen": "weightedOneOf",
            "choices": [
                {
                    "weight": 10,
                    "value": 1
                },
                {
                    "weight": 20,
                    "value": 2
                },
                {
                    "weight": 30,
                    "value": 3
                },
                {
                    "weight": 25,
                    "value": 4
                },
                {
                    "weight": 15,
                    "value": 5
                }
            ]
        },
        "review_text": {
            "_gen": "weightedOneOf",
            "choices": [
                {
                    "weight": 10,
                    "value": {
                        "_gen": "oneOf",
                        "choices": {
                            "_gen": "var",
                            "var": "oneStarTexts"
                        }
                    }
                },
                {
                    "weight": 20,
                    "value": {
                        "_gen": "oneOf",
                        "choices": {
                            "_gen": "var",
                            "var": "twoStarTexts"
                        }
                    }
                },
                {
                    "weight": 30,
                    "value": {
                        "_gen": "oneOf",
                        "choices": {
                            "_gen": "var",
                            "var": "threeStarTexts"
                        }
                    }
                },
                {
                    "weight": 25,
                    "value": {
                        "_gen": "oneOf",
                        "choices": {
                            "_gen": "var",
                            "var": "fourStarTexts"
                        }
                    }
                },
                {
                    "weight": 15,
                    "value": {
                        "_gen": "oneOf",
                        "choices": {
                            "_gen": "var",
                            "var": "fiveStarTexts"
                        }
                    }
                }
            ]
        },
        "created_at": {
            "_gen": "var",
            "var": "review_created_at"
        }
    }
}
